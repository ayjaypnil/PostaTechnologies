                font-family: 'Poppins', sans-serif;
                font-size: 2.5vw;
                color: rgba(69, 69, 69, 0.872);
            }
            .infoDivBizIcons {
                height: 5vw;
                width: auto;
            }
            .infoDivBizIconsLG {
                height: 7vw;
                width: auto;
            }
            .textMDdull {
                font-family: 'Poppins', sans-serif;
                font-size: 2vw;
                color: #5f8ce7a5;
            }
            .textMDreg {
                font-family: 'Arimo', sans-serif;
                font-size: 1.7vw;
                color: rgba(67, 67, 67, 0.557);
            }
            .textSM1 {
                font-family: 'Poppins', sans-serif;
                font-size: 1.5vw;
                color: #47a0ee;

            }
            .nextArrowIcon {
                height: 14px;
                width: auto;
            }

            .bizPageContentDivText {
                padding: 25px;
            }

            #bizPageThreeSteps {
                margin-top: 3vw;
                background: rgba(208, 243, 255, 0.461);
            }
            .bizPageThreeStepTextContent {
                padding: 3vw;
            }

        }

        @media only screen and (min-width: 766px) {
            #bizPagePromoUserPicOne {
                clip-path: polygon(40% 0, 100% 0, 100% 100%, 0 100%);

            }
            #bizPagePromoUserPicTwo {
                clip-path: polygon(0 0, 100% 0, 60% 100%, 0 100%);

            }
            .bizPageThreeStepTextContent {
                padding: 3vw;
            }

            #bannerText {
                font-size: 4vw;
                padding: 2vw;
            }

            .infoDivBizIcons {
                height: 7vw;
                width: auto;
            }
            .infoDivBizIconsLG {
                height: 9vw;
                width: auto;
            }
            .textLG {
                font-family: 'Poppins', sans-serif;
                font-size: 1.7vw;
                color: rgba(69, 69, 69, 0.872);
            }
            .textMDdull {
                font-family: 'Poppins', sans-serif;
                font-size: 1.6vw;
                color: #5f8ce7;
            }
            .textMDreg {
                font-family: 'Arimo', sans-serif;
                font-size: 1.4vw;

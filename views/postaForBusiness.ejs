            }
            .bizPageMainContentRow {
                justify-content: center;
                align-items: center;
                display: flex;
            }
            .col-sm-pull-7 {
                left: 50%;
                padding-right: 5vw;
            }
        }

        @media (min-width: 768px) {
            .col-sm-push-5 {
                right: 50% !important;
